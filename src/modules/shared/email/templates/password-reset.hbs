<table
  width='100%'
  cellpadding='0'
  cellspacing='0'
  role='presentation'
  style="background: {{colors.background}}; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; padding:24px;"
>
  <tr>
    <td align='center'>
      <table
        role='presentation'
        width='600'
        cellpadding='0'
        cellspacing='0'
        style='max-width:600px; width:100%; background:#ffffff; border-radius:10px; overflow:hidden; box-shadow:0 6px 18px rgba(15,23,42,0.06);'
      >
        <tr>
          <td
            style='padding:20px 24px; text-align:center; background: {{colors.primary}}; color:#fff;'
          >
            <h1 style='margin:0; font-size:22px; color:#ffffff;'>Reset Your
              Password</h1>
          </td>
        </tr>
        <tr>
          <td style='padding:24px; color: {{colors.text}};'>
            <p style='margin:0 0 12px; color: {{colors.text}};'>Hi {{name}},</p>
            <p style='margin:0 0 16px;'>We received a request to reset your
              password. Use the code below to continue. This code will expire in
              <b>{{expiryMinutes}} minutes</b>.</p>
            <div style='text-align:center; margin: 24px 0;'>
              <span
                style='display:inline-block; font-size:28px; letter-spacing:6px; background:#f3f4f6; padding:12px 24px; border-radius:8px; color:{{colors.primary}}; font-weight:700;'
              >{{code}}</span>
            </div>
            <p style='margin:0 0 16px;'>
              Enter this code in the password reset form to set a new password.
            </p>
            <p
              style='margin:20px 0 0; font-size:13px; color:{{colors.muted}};'
            >If you didn't request a password reset, please ignore this email or
              contact support.</p>
          </td>
        </tr>
        <tr>
          <td
            style='background:#f9fafb; padding:12px 20px; text-align:center; color:{{colors.footer}}; font-size:12px;'
          >&copy; {{year}} My Renters Guide</td>
        </tr>
      </table>
    </td>
  </tr>
</table>